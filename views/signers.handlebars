<h1>See the List of Supporters &nbsp<u>You</u>&nbsp have Joined</h1>

<div class="signers-container">
    {{#each signers}}
    {{#if this.url}}
        <p class="signers-line"><a id="linkname" href='{{url}}'>{{this.first}} {{this.last}}</a>
    {{else}}
    <p>{{this.first}} {{this.last}}</p>
    {{/if}}<div class="age">({{age}},</div>
            {{#if ../hideCity}}){{else}}<a class="signers" href='/petition/signers/{{city}}'>{{city}})</p>
    {{/if}}
        </a></p>
    {{/each}}
</div>
