<h1>List of Peeps</h1>

<div class="signers-container">
    {{#each signers}}
    {{#if this.url}}
        <a href='{{url}}'>{{this.first}}{{this.last}}</a>
    {{else}}
    <p>{{this.first}} {{this.last}}</p>
    {{/if}}({{age}},
            {{#if ../hideCity}}){{else}}<a href='/petition/signers/{{city}}'>{{city}})
    {{/if}}
        </a></p>
    {{/each}}
</div>
<a href="/logout">Click here to Logout.</a>
